type Language {
    name :String!
}


type Film {
    id: ID!
    title: String!
    releaseYear: Int!
    language : Language!
    actors: [Actor!]! # Expos√© comme un champ virtuel

}






type Actor {
    id: ID!
    firstName: String!
    lastName: String!
    films: [Film!]!
}

type Query {
    films: [Film!]!
    film(id: ID!): Film
    filmsByCategory(name : String!) : [Film!]!
}
