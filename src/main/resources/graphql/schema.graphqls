type Language {
    name :String!
}


type Film {
    id: ID!
    title: String!
    releaseYear: Int!
    language : Language!
    actors: [Actor!]!
}


type Actor {
    id: ID!
    firstName: String!
    lastName: String!
    films: [Film!]!
}

type Query {
    #Films
    films: [Film!]!
    film(id: ID!): Film
    filmsByCategory(name : String!) : [Film!]!

    #Actors
    Actors: [Actor!]!
    Actor(id: ID!) : Actor
}
